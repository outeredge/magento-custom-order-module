<?xml version="1.0" encoding="UTF-8"?>
<config>
    <modules>
        <Edge_CustomOrder>
            <version>1.0.0</version>
        </Edge_CustomOrder>
    </modules>
    <global>
        <models>
            <customorder>
                <class>Edge_CustomOrder_Model</class>
            </customorder>
        </models>
        <helpers>
            <customorder>
                <class>Edge_CustomOrder_Helper</class>
            </customorder>
        </helpers>
        <blocks>
            <customorder>
                <class>Edge_CustomOrder_Block</class>
            </customorder>
        </blocks>
        <adminhtml>
            <events>
                <adminhtml_widget_container_html_before>
                    <observers>
                        <your_module>
                            <class>Edge_CustomOrder_Model_Observer</class>
                            <type>singleton</type>
                            <method>addButtonOrderView</method>
                        </your_module>
                    </observers>
                </adminhtml_widget_container_html_before>
            </events>
        </adminhtml>
    </global>
</config>